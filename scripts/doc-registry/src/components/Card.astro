---
interface Props {
    title: string;
    url: string;
    subtitle: string;
    className: string;
}

const { title, subtitle, url, className } = Astro.props;
---

<a
    href={url}
    target="_blank"
    class={`${className} w-full items-center
    bg-white dark:bg-gray-900
    border border-gray-200 rounded-lg shadow dark:border-gray-700
    cursor-pointer group
    transition-all duration-300
    relative
    no-underline`}
>
    <div
        class="flex flex-col items-center py-6
        scale-100 group-hover:scale-110
        transition-transform duration-300"
    >
        <slot name="icon" />
        <h5
            class="mb-1 !mt-1 pt-1 text-xl font-medium text-gray-900 dark:text-white"
        >
            {title}
        </h5>
        <span class="text-sm text-gray-500 dark:text-gray-400">{subtitle}</span>
    </div>
</a>
